<Window x:Class="GIBDDApp.Windows.DriversMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDDApp.Windows"
        mc:Ignorable="d" Icon="/Resources/gibdd_logo.png"
        MouseMove="Window_MouseMove"
        Title="Список водителей" Height="650" Width="800" MinHeight="550" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="80" Background="#FFB5D5CA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontFamily" Value="Comic Sans MS"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="FontFamily" Value="Comic Sans MS"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Image Margin="10" Source="/Resources/gibdd_logo.png" />
            <TextBlock Grid.Column="1" Text="ГИБДД" TextAlignment="Left"/>
        </Grid>
        <DataGrid  Margin="10,10,10,70" Grid.Row="1" x:Name="dgridDrivers" FontFamily="Comic Sans MS" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" IsReadOnly="True" Binding="{Binding Path=Id}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Margin="5" Height="30" Width="30" Source="{Binding Path=Photo}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Имя" IsReadOnly="True" Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Второе имя" IsReadOnly="True" Binding="{Binding Path=MiddleName}"/>
                <DataGridTextColumn Header="Серия паспорта" IsReadOnly="True" Binding="{Binding Path=PassportSeries}"/>
                <DataGridTextColumn Header="Номер паспорта" IsReadOnly="True" Binding="{Binding Path=PassportNumber}"/>
                <DataGridTextColumn Header="Индекс" IsReadOnly="True" Binding="{Binding Path=PostCode}"/>
                <DataGridTextColumn Header="Адрес прописки" IsReadOnly="True" Binding="{Binding Path=Address}"/>
                <DataGridTextColumn Header="Адрес прожвания" IsReadOnly="True" Binding="{Binding Path=AddressLife}"/>
                <DataGridTextColumn Header="Компания" IsReadOnly="True" Binding="{Binding Path=Company}"/>
                <DataGridTextColumn Header="Должность" IsReadOnly="True" Binding="{Binding Path=Jobname}"/>
                <DataGridTextColumn Header="Телефон" IsReadOnly="True" Binding="{Binding Path=Phone}"/>
                <DataGridTextColumn Header="Email" IsReadOnly="True" Binding="{Binding Path=Email}"/>
                <DataGridTextColumn Header="Описание" IsReadOnly="True" Binding="{Binding Path=Description}"/>
                
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="btnEdit" Margin="5" Content="Изменить" Click="RowChangeButton_Click" Background="#FCE0A9AF"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="5" Click="RowDeleteButton_Click" Background="#FCE0A9AF" Content="Удалить"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" Click="ButtonAdd_Click" Background="#FCE0A9AF" FontFamily="Comic Sans MS" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="20" Grid.Row="1" Height="40" Width="150"/>
    </Grid>
</Window>
